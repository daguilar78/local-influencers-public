{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",

		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],

		"types": ["node"],
		"strict": true,
		"skipLibCheck": true,

		"baseUrl": "."
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
