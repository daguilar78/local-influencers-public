{
	"name": "worker",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
		"build": "tsc -p tsconfig.json",
		"prestart": "pnpm -w -r --filter @repo/shared --filter worker build",
		"start": "node dist/index.js",
		"prisma:generate": "prisma generate --schema=../../packages/db/prisma/schema.prisma",
		"postinstall": "prisma generate --schema=../../packages/db/prisma/schema.prisma"
	},
	"dependencies": {
		"@prisma/client": "^5.18.0",
		"@repo/shared": "workspace:*",
		"node-cron": "^3.0.3",
		"pino": "^9.9.5",
		"prom-client": "^15.1.3"
	},
	"devDependencies": {
		"@types/node": "22",
		"@types/node-cron": "^3.0.11",
		"dotenv-cli": "^10.0.0",
		"pino-pretty": "^13.1.1",
		"prisma": "^5.18.0",
		"tsx": "^4.16.2",
		"typescript": "^5.9.2"
	}
}
